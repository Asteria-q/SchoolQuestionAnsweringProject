/* CSS代码 */
page{
    background: linear-gradient(to bottom, #D1E6F8, #A2C8F3, #74ABEE, #488DE9, #1B70E4);
}
.container {
    /* background: linear-gradient(to bottom, #283c86, #45a247); */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.form-group {
    margin-bottom: 20px;
}

.input-title,
.input-content {
    border: none;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 10px;
    /* color: #000000; */
    font-size: 16px;
    width: 100%;
    resize: none;
}

.input-title {
    height: 40px;
}

.input-content {
    height: 200px;
}

.submit-button {
    background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
    border: none;
    color: #fff;
    font-size: 16px;
    border-radius: 10px;
    padding: 10px 20px;
    margin-left: 10px;
    box-shadow: 0 4px 6px rgba(50, 50, 93, .11),
        0 1px 3px rgba(0, 0, 0, .08);
    transition: all 0.2s ease-in-out;
}

.submit-button:hover {
    cursor: pointer;
    transform: translateY(-1px);
    box-shadow: 0 7px 14px rgba(50, 50, 93, .10),
        0 3px 6px rgba(0, 0, 0, .08);
}