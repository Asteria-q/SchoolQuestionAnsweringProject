page {
  background: linear-gradient(135deg, #0077b6, #00b4d8);
}

.container {
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-family: Arial, sans-serif;
  /* color: white; */
}

.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.avatar {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 2rpx solid white;
}

.info {
  margin-top: 24rpx;
  text-align: center;
  color: #fff;
}

.username {
  font-size: 30px;
  font-weight: bold;
  color: #fff;
}

.intro {
  margin-top: 8rpx;
  font-size: 16px;
}

.body {
  margin-top: 24px;
  width: 80%;
  background: #F5F5F5;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4px 8rpx rgba(0, 0, 0, 0.2);
}

.field {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 16rpx;
}

.label {
  flex: 1;
  font-size: 20px;
  font-weight: bold;
}

.value {
  flex: 2;
  font-size: 20px;
  word-break: break-all;
}

.tags {
    flex: 2;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}

.tag {
    background-color: #E3EEFF;
    color: #3C7FFF;
    font-size: 24rpx;
    padding: 5rpx 10rpx;
    border-radius: 20rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}