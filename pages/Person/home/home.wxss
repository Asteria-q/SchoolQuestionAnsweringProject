/* pages/PersonalInfo/home/home.wxss */
@import "/pages/SearchAndBrowse/home/home.wxss";

page {
  background-color: white;
}

.bgcImage {
  position: relative;
  width: 100%;
  height: 560rpx;
  background: #355C7D;
  background: -webkit-linear-gradient(to right, #C06C84, #6C5B7B, #355C7D);
  background: linear-gradient(to right, #C06C84, #6C5B7B, #355C7D);
}

.userInfo {
  position: absolute;
  left: 80rpx;
  top: 20%;
  height: 60%;
  width: 90%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}

.AvatarAndInfo {
  display: flex;
}

/* 头像 */
.Image {
  display: flex;
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #fff;
}

.SelfIntro {
  margin-top: 30rpx;
  margin-bottom: 15rpx;
  width: 90%;
  height: auto;
  font-size: 28rpx;
  font-weight: lighter;
  color: rgb(255, 225, 225);
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-family: 仿宋;
}

/* 角色信息text */
.userInfoTxt {
  margin: 10rpx 0 0 20rpx;
  color: rgb(233, 253, 253);
  letter-spacing: 3rpx;
}

.userName {
  margin-bottom: 20rpx;
  font-size: larger;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.Sex {
  display: flex;
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
  margin-left: 30rpx;
  margin-top: 15rpx;
  border-radius: 50%;
}

.GradeAndPro {
  display: flex;
  flex-direction: row;
}

.Grade {
  font-size: 32rpx;
  align-items: center;
  margin-right: 20rpx;
  align-content: center;
  color: lemonchiffon;
  font-family: 华文新魏;
}

.Profession {
  display: flex;
  font-size: 32rpx;
  align-items: center;
  margin-right: 20rpx;
  align-content: center;
  color: lemonchiffon;
  font-family: 华文新魏;
}

.iconArrow {
  position: fixed;
  margin-top: 17%;
  margin-left: 80%;
}

/* 第一个Dialog */
.userInfoDialog {
  position: absolute;
  padding-top: 1.5%;
  bottom: -120rpx;
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: #ccc 0 0 5rpx 2rpx;
  color: rgb(106, 106, 106);
}

/* 第二个Dialog */
.more {
  margin-top: 150rpx;
  padding-top: 1.5%;
  width: 100%;
  height: 350rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: #ccc 0 0 5rpx 2rpx;
  color: rgb(106, 106, 106);
}

.tags {
  display: flex;
  flex-wrap: wrap;
}


.tag {
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag:nth-child(1) {
  background-color: #39B5E0;
  color: #fff;
}

.tag:nth-child(2) {
  background-color: #2ecc71;
  color: #fff;
}

.tag:nth-child(3) {
  background-color: #f1c40f;
  color: #fff;
}

.tag:nth-child(4) {
  background-color: #e67e22;
  color: #fff;
}

.tag:nth-child(5) {
  background-color: #e74c3c;
  color: #fff;
}