/* wxss代码 */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.form-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
  margin-left: 10px;
}

.label {
  width: 100px;
  font-size: 16px;
}

.input {
  flex: 1;
  padding: 5px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  outline: none;
}

.submit-btn {
  width: 200px;
  height: 40px;
  background-color: #008CBA;
  color: white;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  margin-top: 30px;
}