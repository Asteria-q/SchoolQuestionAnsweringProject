/* pages/question/show/show.wxss */
page {
    padding-bottom: 100px;
}

.container {
    background-color: #f5f5f5;
    padding: 20rpx;
    align-self: center;
    display: flex;
    flex-direction: column;
    height: auto;
    font-size: medium;
}

.QueHeader {
    background-color: #008B8B;
    /* background-color: #3f51b5; */
    color: #fff;
    padding: 20rpx;
    border-radius: 10rpx 10rpx 0 0;
    box-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.16);
}

.QueTitle {
    font-size: 40rpx;
    font-weight: bold;
}

.QueContent {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 0 0 10rpx 10rpx;
}

.text {
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

.QueUser {
    display: flex;
    flex-direction: row;
    margin-top: 15px;
}

.QueImage {
    width: 60rpx;
    height: 60rpx;
    overflow: hidden;
    margin-left: 25rpx;
    border-radius: 50%;
}

.QueUserName {
    font-weight: normal;
    color: black;
    margin-left: 10px;
}

.QueTime {
    position: absolute;
    font-size: small;
    font-weight: lighter;
    margin-top: 10px;
    margin-left: 62%;
}

.QueInfo {
    display: flex;
    flex-direction: row;
    margin-top: 10px;
}

.q-info {
    display: flex;
    flex-direction: row;
    position: absolute;
    margin-left: 50%;
}

.love {
    display: flex;
    flex-direction: row;
}

.comment {
    display: flex;
    flex-direction: row;
    margin-left: 20px;
}

.report {
    margin-left: 20px;
}

.ans-info {
    display: flex;
    flex-direction: row-reverse;
}

.number {
    margin-left: 10rpx;
    align-self: center;
}

.answers {
    display: flex;
    flex-direction: column;
    padding: 15px;
}

.answer {
    border-top: 1rpx solid #e5e5e5;
    padding-top: 20rpx;
}

.answer-header {
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}

.answer-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #9e9e9e;
    margin-right: 10rpx;
}

.answer-username {
    font-size: 28rpx;
    margin-right: 10rpx;
}

.answer-time {
    font-size: 24rpx;
    color: #999;
}

.answer-content {
    font-size: 28rpx;
}

.tags {
    display: flex;
    flex-wrap: wrap;
}

.tag {
    background-color: #E3EEFF;
    color: #3C7FFF;
    font-size: 24rpx;
    padding: 5rpx 10rpx;
    border-radius: 20rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.up {
    position: fixed;
    right: 30rpx;
    bottom: 120rpx;
    border-radius: 50%;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    z-index: 10;
}

.add {
    position: fixed;
    right: 30rpx;
    bottom: 30rpx;
    border-radius: 50%;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
    z-index: 10;
}