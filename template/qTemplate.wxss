.container {
  margin-top: 15px;
  margin-left: 3%;
  margin-right: 3%;
  margin-bottom: 20px;
  background-color: #F5F5F5;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 5%;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
}

.header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.info {
  flex-grow: 1;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.content {
  margin-top: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.text {
  font-size: 32rpx;
  line-height: 1.5em;
  color: #666666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
}

.q-info {
  display: flex;
  flex-direction: row;
}

.love {
  display: flex;
  flex-direction: row;
  position: absolute;
  margin-left: 50%;
}

.comment {
  display: flex;
  flex-direction: row;
  position: absolute;
  margin-left: 70%;
}

.number {
  margin-left: 10rpx;
  align-self: center;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #E3EEFF;
  color: #3C7FFF;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}